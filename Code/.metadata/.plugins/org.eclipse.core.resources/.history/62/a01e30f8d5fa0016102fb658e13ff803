package Gear;
public class Pendant 
{
	protected boolean Equiped;
	protected int bonus;
	protected String Desctiption; 
	public boolean isEquiped()
	{
		return Equiped;
	}
	public void Equip()
	{
		Equiped = true;
	}
	public void unequip()
	{
		Equiped=false;
	}
	public int getBonus() 
	{
		return bonus;
	}
	public void setBonus(int bonus) 
	{
		this.bonus = bonus;
	}
	@Override
	public String toString()
	{
		return Desctiption;
	}
}